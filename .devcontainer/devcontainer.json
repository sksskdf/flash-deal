{
  "name": "Flash Deal Dev",
  "dockerComposeFile": [
    "docker-compose.yml"
  ],
  "service": "app",
  "workspaceFolder": "/workspaces/flashdeal",
  "runServices": [
    "mongo",
    "redis",
    "kafka",
    "otel-collector",
    "prometheus",
    "grafana",
    "k6",
    "loki",
    "promtail"
  ],
  "shutdownAction": "stopCompose",
  "remoteUser": "vscode",
  "overrideCommand": true,
  "postCreateCommand": "cd src/frontend && npm install",
  "features": {},
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspaces/flashdeal,type=bind,consistency=cached",
    "source=flashdeal-gradle-cache,target=/home/vscode/.gradle,type=volume",
    "source=flashdeal-node-modules,target=/workspaces/flashdeal/src/frontend/node_modules,type=volume"
  ],
  "forwardPorts": [
    8080,
    5173,
    27017,
    6379,
    9092,
    4317,
    4318,
    8889,
    9090,
    3000
  ],
  "containerEnv": {
    "TESTCONTAINERS_HOST_OVERRIDE": "host.docker.internal",
    "GRADLE_USER_HOME": "/workspaces/flashdeal/src/backend/.gradle",
    "JAVA_HOME": "/usr/lib/jvm/msopenjdk-current"
  },
  "customizations": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "Pivotal.vscode-boot-dev-pack",
        "vscjava.vscode-spring-initializr",
        "vmware.vscode-spring-boot",
        "GraphQL.vscode-graphql",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "google.geminicodeassist"
      ]
  }
}



